<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="plugin.video.classical.tv"
  version="1.0.1"
  name="Classical TV"
  provider-name="queeup">
  <requires>
    <import addon="xbmc.python"
            version="1.0"/>
    <import addon="script.module.simplejson"
            version="2.0.10"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
             library="addon.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Classical TV video add-on</summary>
    <description>Classical TV brings you the virtual concert hall and the best seats in the house.</description>
    <license>WTFPL</license>
    <platform>all</platform>
    <nofanart>true</nofanart>
    <broken>Classical TV is currently under maintenance.</broken>
  </extension>
</addon>